{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["jest"],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "gql.tada/ts-plugin",
        "schemas": [
          {
            "name": "hypercerts",
            "schema": "https://api.hypercerts.org/v1/graphql",
            "tadaOutputLocation": "./graphql/hypercerts/env.d.ts"
          },
          {
            "name": "gitcoin",
            "schema": "https://beta.indexer.gitcoin.co/v1/graphql",
            "tadaOutputLocation": "./graphql/gitcoin/env.d.ts"
          }
        ]
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/hypercert/[hypercertId]/components/PaymentFlow"
  ],
  "exclude": ["node_modules"]
}
